@model NumerosALetras.Models.LoginViewModel

@{
    ViewBag.Title = "Inicio de Sesión";
}
@{
    ViewData["PageClass"] = "page-login";
}

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; font-family: Arial, sans-serif;">
    <form asp-action="Index" method="post" style="background-color: #f0f0f0; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h2 style="text-align: center; margin-bottom: 1.5rem;">Iniciar Sesión</h2>

        <div style="margin-bottom: 1rem;">
            <label for="Username" style="display: block; margin-bottom: 0.5rem;">Usuario:</label>
            <input asp-for="Username" id="Username" name="Username" required style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
            <span asp-validation-for="Username" style="color: red;"></span>
        </div>
        <div style="margin-bottom: 1rem;">
            <label for="Password" style="display: block; margin-bottom: 0.5rem;">Contraseña:</label>
            <input asp-for="Password" id="Password" name="Password" type="password" required style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
            <span asp-validation-for="Password" style="color: red;"></span>
        </div>
        <button type="submit" style="width: 100%; padding: 0.75rem; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">Iniciar Sesión</button>
        <p style="text-align: center; margin-top: 1rem;">
            ¿No tienes una cuenta? <a href="@Url.Action("Register", "Account")" style="color: #007bff; text-decoration: none;">Regístrate aquí</a>
        </p>
    </form>
</div>
